<div class="symbaroum chat item">
    <div class="foreground">
        <h3>{{name}}</h3>
        {{#if system.isTrait}}
        <p class="type">{{localize "ITEM.TRAIT"}}</p>
        {{/if}}
        {{#if system.isAbility}}
        <p class="type">{{localize "ITEM.ABILITY"}}</p>
        {{/if}}
        {{#if system.isMysticalPower}}
        <p class="type">{{localize "ITEM.MYSTICAL_POWER"}}</p>
        {{/if}}
        {{#if system.isRitual}}
        <p class="type">{{localize "ITEM.RITUAL"}}</p>
        {{/if}}
        {{#if system.isWeapon}}
        <p class="type">{{localize "ITEM.WEAPON"}} {{#if system.isArtifact}}- {{localize "ITEM.ARTIFACT"}} {{/if}}</p>
        {{/if}}
        {{#if system.isArmor}}
        <p class="type">{{localize "ITEM.ARMOR"}} {{#if system.isArtifact}}- {{localize "ITEM.ARTIFACT"}} {{/if}}</p>
        {{/if}}
        {{#if system.isEquipment}}
        <p class="type">{{localize "ITEM.EQUIPMENT"}} {{#if system.isArtifact}}- {{localize "ITEM.ARTIFACT"}} {{/if}}</p>
        {{/if}}



        {{#if img}}
        <img src="{{img}}" data-tooltip="{{name}}"/>
        {{/if}}
        <p class="name" data-item-id="{{id}}">{{{enrichedName}}}</p>

        {{#if system.Trait}}
        <p><strong>{{localize "TRAIT.DESCRIPTION"}}:</strong> {{removeStyling system.description}}</p>
        <p><strong>{{localize "TITLE.NOVICE"}} [{{system.novice.action}}]:</strong> {{removeStyling system.novice.description}}</p>
        <p><strong>{{localize "TITLE.ADEPT"}} [{{system.adept.action}}]:</strong> {{removeStyling system.adept.description}}</p>
        <p><strong>{{localize "TITLE.MASTER"}} [{{system.master.action}}]:</strong> {{removeStyling system.master.description}}</p>
        {{/if}}

        {{#if system.Ability}}
        <p><strong>{{localize "ABILITY.DESCRIPTION"}}:</strong> {{removeStyling system.description}}</p>
        <p><strong>{{localize "TITLE.NOVICE"}} [{{system.novice.action}}]:</strong> {{removeStyling system.novice.description}}</p>
        <p><strong>{{localize "TITLE.ADEPT"}} [{{system.adept.action}}]:</strong> {{removeStyling system.adept.description}}</p>
        <p><strong>{{localize "TITLE.MASTER"}} [{{system.master.action}}]:</strong> {{removeStyling system.master.description}}</p>
        {{/if}}

        {{#if system.MysticalPower}}
        <p><strong>{{localize "MYSTICAL_POWER.MATERIAL"}}:</strong> {{system.material}}</p>
        <p><strong>{{localize "MYSTICAL_POWER.DESCRIPTION"}}:</strong> {{removeStyling system.description}}</p>
        <p><strong>{{localize "TITLE.NOVICE"}} [{{system.novice.action}}]:</strong> {{removeStyling system.novice.description}}</p>
        <p><strong>{{localize "TITLE.ADEPT"}} [{{system.adept.action}}]:</strong> {{removeStyling system.adept.description}}</p>
        <p><strong>{{localize "TITLE.MASTER"}} [{{system.master.action}}]:</strong> {{removeStyling system.master.description}}</p>
        {{/if}}

        {{#if system.Ritual}}
        <p><strong>{{localize "RITUAL.TRADITION"}}:</strong> {{system.tradition}}</p>
        <p><strong>{{localize "RITUAL.DESCRIPTION"}}:</strong> {{removeStyling system.description}}</p>
        {{/if}}

        {{#if system.Weapon}}
        <p><strong>{{localize "WEAPON_CLASS.LABEL"}}:</strong> {{system.reference}}</p>
        <p><strong>{{localize "WEAPON.PC_DAMAGE"}}:</strong> {{system.baseDamage}}</p>
        <p><strong>{{localize "WEAPON.COST"}}:</strong> {{system.cost}}</p>
        <p><strong>{{localize "WEAPON.DESCRIPTION"}}:</strong> {{removeStyling system.description}}</p>
        {{/if}}

        {{#if system.Armor}}
        <p><strong>{{localize "ARMOR.PC_PROTCETION"}}:</strong> {{system.pcProtection}}</p>
        <p><strong>{{localize "ARMOR.IMPEDING"}}:</strong> {{system.impeding}}</p>
        <p><strong>{{localize "ARMOR.COST"}}:</strong> {{system.cost}}</p>
        <p><strong>{{localize "ARMOR.DESCRIPTION"}}:</strong> {{removeStyling system.description}}</p>
        {{/if}}

        {{#if system.Equipment}}
        <p><strong>{{localize "EQUIPMENT.COST"}}:</strong> {{system.cost}}</p>
        <p><strong>{{localize "EQUIPMENT.DESCRIPTION"}}:</strong> {{removeStyling system.description}}</p>
        {{/if}}

        {{#if system.isArtifact}}
        <h3>{{localize "ARTIFACT.TITLE"}}</h3>
            {{#each system.power  as |power key|}}
                <p><strong>{{power.name}}:</strong> {{removeStyling power.description}}</p>
            {{/each}}
        {{/if}}
    </div>
</div>
